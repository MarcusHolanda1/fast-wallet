{
  "extends": "expo/tsconfig.base",
  "include": [
    "src/**/*",
    "App.tsx",
    "index.ts",
    "src/app/shared/types/global.d.ts"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",
    "paths": {
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@modules": ["./src/app/modules"],
      "@modules/*": ["./src/app/modules/*"],
      "@shared": ["./src/app/shared"],
      "@shared/*": ["./src/app/shared/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"]
    }
  }
}
